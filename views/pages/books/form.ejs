<h2 class="view-title"><%- 'update' === formAction ? "Update Book" : Book %></h2>
<form action="/books/1" method="post">
    <input type="hidden" name="_method" value="put">
    <input type="text" name="title" value="<%- book.title %>" placeholder="title">
    <input type="text" name="author" value="<%- book.authors %>"  placeholder="Contact Person">
    <textarea name="description" placeholder="Book description" cols="30" rows="10"><%- book.description %></textarea>
    <input type="text" name="isbn" value="<%- book.isbn %>" placeholder="ISBN">
    <input type="text" name="bookshelf" placeholder="Enter Bookshelf">
    <button type="submit"><%- 'update' === formAction ? "Update This Book" : Book %></button>
  </form>