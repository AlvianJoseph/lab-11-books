<link rel="stylesheet" href="./styles/modules.css">
<h2 class="view-title"><%- 'update' === formAction ? "Update Book" : Book %></h2>
<form id='editbook' action="/books/1" method="post">
    <input type="hidden" name="_method" value="put">
    <input id='title' type="text" name="title" value="<%- book.title %>" placeholder="title">
    <input id='author' type="text" name="author" value="<%- book.authors %>"  placeholder="Contact Person">
    <textarea id='description' name="description" placeholder="Book description" cols="30" rows="10"><%- book.description %></textarea>
    <input id='isbn' type="text" name="isbn" value="<%- book.isbn %>" placeholder="ISBN">
    <input id='bookshelf' type="text" name="bookshelf" placeholder="Enter Bookshelf">
    <button id='subbutton' type="submit"><%- 'update' === formAction ? "Update This Book" : Book %></button>
  </form>